<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pos.controller.MainController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to right, #f7f9fb, #dfe6e9);">

    <stylesheets>
        <URL value="@/styles/main.css"/>
    </stylesheets>

    <left>
        <VBox spacing="20" prefWidth="220" style="-fx-background-color: #2c3e50; -fx-alignment: center;">
            <padding>
                <Insets top="25" right="10" bottom="25" left="10"/>
            </padding>

            <children>

                <!-- Satış düyməsi -->
                <Button fx:id="salesBtn" text=" Satış" onAction="#showSalesPane" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@/icons/cart.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Stok İdarəetməsi düyməsi -->
                <Button fx:id="stockBtn" text=" Stok" onAction="#showStockPane" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@/icons/box.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="userBtn" text=" İstifadəçi" onAction="#showUserPane" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@/icons/user.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;"/>
    </center>


    <top>
        <VBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="roleLabel" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
        </VBox>
    </top>
</BorderPane>
