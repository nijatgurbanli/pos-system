<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pos.controller.MainController"
            prefWidth="800" prefHeight="600">
    <left>
        <VBox spacing="20" prefWidth="200" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <children>
                <Button text="Stok İdarəetməsi" onAction="#showStockPane" prefWidth="180"/>
                <Button text="Satış" onAction="#showSalesPane" prefWidth="180"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>




